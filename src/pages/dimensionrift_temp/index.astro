    <script is:inline>
      // Lightbox functions
      function openLightbox(src, alt) {
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const caption = document.getElementById('lightbox-caption');
        
        lightbox.style.display = 'flex';
        lightboxImg.src = src;
        lightboxImg.alt = alt;
        caption.textContent = alt;
        document.body.style.overflow = 'hidden';
      }

      function closeLightbox(event) {
        if (event) {
          event.preventDefault();
          event.stopPropagation();
        }
        document.getElementById('lightbox').style.display = 'none';
        document.body.style.overflow = ''; // Re-enable scrolling
      }

      // Close lightbox when pressing Escape key
      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          closeLightbox(event);
        }
      });

      // Close lightbox when clicking outside the image
      document.getElementById('lightbox').addEventListener('click', function(event) {
        if (event.target === this) {
          closeLightbox();
        }
      });

      // Language Switcher
      document.addEventListener("DOMContentLoaded", function () {
        const languageButton = document.querySelector(".language-button");
        const languageDropdown = document.querySelector(".language-dropdown");
        const languageOptions = document.querySelectorAll(".language-option");

        if (!languageButton || !languageDropdown) return;

        // Toggle dropdown
        languageButton.addEventListener("click", function (e) {
          e.stopPropagation();
          const isOpen = languageDropdown.style.display === "block";
          languageDropdown.style.display = isOpen ? "none" : "block";
        });

        // Close dropdown when clicking outside
        document.addEventListener("click", function () {
          languageDropdown.style.display = "none";
        });

        // Prevent dropdown from closing when clicking inside it
        languageDropdown.addEventListener("click", function (e) {
          e.stopPropagation();
        });

        // Handle language selection
        languageOptions.forEach(function (option) {
          option.addEventListener("click", function (e) {
            e.preventDefault();
            e.stopPropagation();

            const lastSpan = this.querySelector("span:last-child");
            const firstSpan = this.querySelector("span:first-child");
            const checkIcon = this.querySelector("i.fa-check");

            if (!lastSpan || !firstSpan || !checkIcon || !languageButton)
              return;

            const langText = lastSpan.textContent;
            const flagClass = firstSpan.className;

            // Update button text and flag
            const buttonText = languageButton.querySelector("span");
            const buttonIcon = languageButton.querySelector("i.fa-globe");

            // Replace with flag icon
            if (buttonIcon) buttonIcon.className = flagClass;
            if (buttonText && langText) buttonText.textContent = langText;

            // Update checkmarks
            languageOptions.forEach(function (opt) {
              const icon = opt.querySelector("i.fa-check");
              if (icon) {
                icon.style.display = "none";
              }
            });

            checkIcon.style.display = "inline-block";

            // Close dropdown
            languageDropdown.style.display = "none";
          });
        });
      });
    </script>

