---
import { Image } from "astro:assets";
import seal01 from '../assets/seal/Kenny.webp';
import { Icon } from "astro-icon/components";
import type { ContactItem } from "~/types";

export interface Props {
  items: Array<ContactItem>;
  title: string;
  role: string;
  url: string;
}

const { items, title, url } = Astro.props;
---

<div class="max-w-6xl space-y-2">
  <div class="relative border border-default bg-offset px-2 pb-4 pt-8">
    <h3
      class="absolute right-4 top-0 -translate-y-1/2 rounded-full border border-current bg-default px-4 py-1 uppercase tracking-tight text-xs"
    >
      {title}
    </h3>
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-2 md:grid-cols-4">
      {
        items.map((item) => (
          <li>
            <a class="flex flex-col items-center" href={item.url}>
              <Icon class="size-12" name={item.icon} />
              <span>{item.title}</span>
              <p class="text-sm" style="color:gray;">{item.role}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <p class="text-right text-sm">
    <a class="text-primary" href={url}> Direct Message (Facebook Inbox) &rarr;</a>
  </p>
</div>